{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Dataset Radar Report",
  "description": "Structured intelligence report on AI training data activity",
  "type": "object",
  "required": ["generated_at", "period", "summary"],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when report was generated"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" },
        "days": { "type": "integer" }
      }
    },
    "summary": {
      "type": "object",
      "description": "Quick stats for decision making",
      "properties": {
        "total_datasets": { "type": "integer" },
        "total_github_orgs": { "type": "integer" },
        "total_github_repos": { "type": "integer" },
        "total_github_repos_high_relevance": { "type": "integer" },
        "total_papers": { "type": "integer" },
        "total_blog_posts": { "type": "integer" },
        "total_x_tweets": { "type": "integer" }
      }
    },
    "datasets": {
      "type": "array",
      "description": "New datasets from watched organizations",
      "items": { "$ref": "#/definitions/Dataset" }
    },
    "github_activity": {
      "type": "array",
      "description": "GitHub repository activity grouped by organization",
      "items": { "$ref": "#/definitions/GitHubOrgActivity" }
    },
    "papers": {
      "type": "array",
      "description": "Recent papers from arXiv and HuggingFace",
      "items": { "$ref": "#/definitions/Paper" }
    },
    "blog_posts": {
      "type": "array",
      "description": "Blog articles grouped by source",
      "items": { "$ref": "#/definitions/BlogSource" }
    },
    "x_activity": {
      "type": "object",
      "description": "X/Twitter activity from monitored accounts",
      "$ref": "#/definitions/XActivity"
    },
    "labs_activity": {
      "type": "object",
      "description": "Activity summary per AI lab (datasets, repos, papers)"
    },
    "vendor_activity": {
      "type": "object",
      "description": "Activity summary per data vendor"
    },
    "datasets_by_type": {
      "type": "object",
      "description": "Dataset IDs grouped by classification type"
    }
  },
  "definitions": {
    "Dataset": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "HuggingFace dataset ID (e.g., 'allenai/dolma')"
        },
        "author": { "type": "string" },
        "category": {
          "type": "string",
          "enum": ["sft_instruction", "preference", "reward_model", "synthetic", "agent", "multimodal", "multilingual", "rl_environment", "code", "evaluation", "other"],
          "description": "Auto-classified dataset type"
        },
        "downloads": { "type": "integer" },
        "likes": { "type": "integer" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "languages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "license": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "task_categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "created_at": { "type": "string", "format": "date-time" },
        "last_modified": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "size_category": { "type": "string" }
      }
    },
    "GitHubOrgActivity": {
      "type": "object",
      "required": ["org"],
      "properties": {
        "org": {
          "type": "string",
          "description": "GitHub organization name"
        },
        "repos_count": { "type": "integer" },
        "has_activity": { "type": "boolean" },
        "repos_updated": {
          "type": "array",
          "items": { "$ref": "#/definitions/GitHubRepo" }
        }
      }
    },
    "GitHubRepo": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": { "type": "string" },
        "full_name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "stars": { "type": "integer" },
        "forks": { "type": "integer" },
        "language": { "type": "string" },
        "topics": {
          "type": "array",
          "items": { "type": "string" }
        },
        "relevance": {
          "type": "string",
          "enum": ["high", "low"],
          "description": "Relevance to AI datasets based on keywords"
        },
        "relevance_signals": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Keywords that triggered high relevance"
        },
        "updated_at": { "type": "string" }
      }
    },
    "Paper": {
      "type": "object",
      "required": ["title", "url"],
      "properties": {
        "title": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "pdf_url": { "type": "string", "format": "uri" },
        "source": {
          "type": "string",
          "enum": ["arxiv", "huggingface"]
        },
        "authors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "abstract": { "type": "string" },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "is_dataset_paper": {
          "type": "boolean",
          "description": "Whether the paper introduces a new dataset"
        },
        "relevance_score": { "type": "integer" },
        "category": {
          "type": "string",
          "description": "Paper topic category (e.g., '数据集构建')"
        }
      }
    },
    "BlogSource": {
      "type": "object",
      "required": ["source"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Blog name (e.g., 'OpenAI Blog')"
        },
        "category": {
          "type": "string",
          "enum": ["us_frontier", "us_emerging", "china", "research", "data_vendor"]
        },
        "has_activity": { "type": "boolean" },
        "total_articles": { "type": "integer" },
        "status": { "type": "string" },
        "articles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["title", "url"],
            "properties": {
              "title": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "date": { "type": "string" },
              "summary": { "type": "string" },
              "signals": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "XActivity": {
      "type": "object",
      "properties": {
        "accounts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "username": { "type": "string" },
              "category": { "type": "string" },
              "relevant_tweets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string" },
                    "text": { "type": "string" },
                    "url": { "type": "string", "format": "uri" },
                    "date": { "type": "string" },
                    "signals": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
