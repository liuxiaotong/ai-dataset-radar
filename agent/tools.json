{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "ai-dataset-radar",
  "description": "AI training data competitive intelligence tools",
  "version": "3.0.0",
  "tools": [
    {
      "name": "radar_scan",
      "description": "Run a full intelligence scan to collect datasets, repos, papers, and blog posts from 30+ AI organizations. Returns a structured report.",
      "parameters": {
        "type": "object",
        "properties": {
          "days": {
            "type": "integer",
            "description": "Number of days to scan (default: 7)",
            "default": 7,
            "minimum": 1,
            "maximum": 90
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["github", "blogs", "papers", "labs", "vendors", "x"]
            },
            "description": "Only scan specified sources (default: all sources)",
            "default": []
          }
        }
      },
      "returns": {
        "type": "object",
        "description": "Scan results with summary and detailed findings",
        "properties": {
          "success": { "type": "boolean" },
          "report_path": { "type": "string" },
          "summary": {
            "type": "object",
            "properties": {
              "datasets": { "type": "integer" },
              "repos": { "type": "integer" },
              "papers": { "type": "integer" },
              "blogs": { "type": "integer" }
            }
          }
        }
      }
    },
    {
      "name": "radar_summary",
      "description": "Get summary of the latest intelligence report without running a new scan. Fast way to check recent findings.",
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "returns": {
        "type": "object",
        "description": "Latest report summary"
      }
    },
    {
      "name": "radar_datasets",
      "description": "List datasets from the latest report, optionally filtered by category or organization.",
      "parameters": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "Filter by dataset category",
            "enum": ["sft", "preference", "synthetic", "agent", "multimodal", "multilingual", "code", "evaluation", "all"]
          },
          "org": {
            "type": "string",
            "description": "Filter by organization/author (e.g. 'openai', 'meta-llama')"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of datasets to return",
            "default": 20
          }
        }
      },
      "returns": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "category": { "type": "string" },
            "downloads": { "type": "integer" },
            "url": { "type": "string" }
          }
        }
      }
    },
    {
      "name": "radar_github",
      "description": "Get GitHub repository activity from watched organizations. Filter by relevance or organization.",
      "parameters": {
        "type": "object",
        "properties": {
          "relevance": {
            "type": "string",
            "description": "Filter by relevance level",
            "enum": ["high", "low", "all"],
            "default": "high"
          },
          "org": {
            "type": "string",
            "description": "Filter by GitHub organization (e.g. 'argilla-io', 'scaleapi')"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of repos to return",
            "default": 20
          }
        }
      },
      "returns": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "stars": { "type": "integer" },
            "description": { "type": "string" },
            "relevance": { "type": "string" }
          }
        }
      }
    },
    {
      "name": "radar_papers",
      "description": "Get recent papers from arXiv and HuggingFace Daily Papers, filtered by dataset relevance.",
      "parameters": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Paper source filter",
            "enum": ["arxiv", "huggingface", "all"],
            "default": "all"
          },
          "dataset_only": {
            "type": "boolean",
            "description": "Only return papers that introduce new datasets",
            "default": false
          },
          "limit": {
            "type": "integer",
            "default": 20
          }
        }
      },
      "returns": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "url": { "type": "string" },
            "source": { "type": "string" },
            "is_dataset_paper": { "type": "boolean" }
          }
        }
      }
    },
    {
      "name": "radar_blogs",
      "description": "Get blog articles from 62+ monitored sources including OpenAI, Anthropic, Google, Meta, Chinese labs, and researcher blogs.",
      "parameters": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Filter by specific blog source name"
          },
          "category": {
            "type": "string",
            "description": "Filter by blog category",
            "enum": ["us_frontier", "us_emerging", "china", "research", "data_vendor", "all"],
            "default": "all"
          },
          "limit": {
            "type": "integer",
            "default": 30
          }
        }
      },
      "returns": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "source": { "type": "string" },
            "articles": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "url": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "radar_config",
      "description": "Get current monitoring configuration including watched organizations, blog sources, and classification keywords.",
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "returns": {
        "type": "object",
        "description": "Current radar configuration"
      }
    },
    {
      "name": "radar_search",
      "description": "Full-text search across all data sources (datasets, GitHub repos, papers, blogs, X/Twitter). Supports keywords and regex patterns.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search keyword or regex pattern"
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["datasets", "github", "papers", "blogs", "x"]
            },
            "description": "Limit search to specific data sources (default: all)",
            "default": []
          },
          "limit": {
            "type": "integer",
            "description": "Maximum results per data source",
            "default": 10
          }
        },
        "required": ["query"]
      },
      "returns": {
        "type": "object",
        "description": "Search results grouped by data source",
        "properties": {
          "datasets": { "type": "array" },
          "github": { "type": "array" },
          "papers": { "type": "array" },
          "blogs": { "type": "array" },
          "x": { "type": "array" }
        }
      }
    },
    {
      "name": "radar_trend",
      "description": "Query dataset growth trends: top growing, rising (>50% growth), breakthroughs (0â†’1000+ downloads), or a specific dataset's history.",
      "parameters": {
        "type": "object",
        "properties": {
          "mode": {
            "type": "string",
            "description": "Query mode",
            "enum": ["top_growing", "rising", "breakthroughs", "dataset"],
            "default": "top_growing"
          },
          "dataset_id": {
            "type": "string",
            "description": "Dataset ID for mode=dataset (e.g. 'openai/gsm8k')"
          },
          "days": {
            "type": "integer",
            "description": "Trend period: 7 or 30 days",
            "default": 7,
            "enum": [7, 30]
          },
          "limit": {
            "type": "integer",
            "description": "Maximum results to return",
            "default": 10
          }
        }
      },
      "returns": {
        "type": "object",
        "description": "Trend results depending on mode: list of datasets with growth info, or single dataset history"
      }
    },
    {
      "name": "radar_history",
      "description": "View historical scan report timeline showing summary statistics and trends across reports.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "description": "Number of recent reports to show",
            "default": 10
          }
        }
      },
      "returns": {
        "type": "object",
        "description": "Timeline table with per-report stats and overall trend"
      }
    },
    {
      "name": "radar_diff",
      "description": "Compare two intelligence reports to identify changes: new/removed datasets, repos, papers, and blog articles.",
      "parameters": {
        "type": "object",
        "properties": {
          "date_a": {
            "type": "string",
            "description": "Older report date (YYYY-MM-DD). Defaults to second latest report."
          },
          "date_b": {
            "type": "string",
            "description": "Newer report date (YYYY-MM-DD). Defaults to latest report."
          }
        }
      },
      "returns": {
        "type": "object",
        "description": "Diff results with summary changes, new items, and removed items",
        "properties": {
          "summary_changes": { "type": "object" },
          "new_items": { "type": "object" },
          "removed_items": { "type": "object" }
        }
      }
    }
  ]
}
